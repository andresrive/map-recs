<div class="container text-center">
  <div class="row">
    <div class="col align-self-center">
      <h1>{{user.username}}'s profile</h1>
      <div class="profile">
        {{!-- <img id="img-default" src="/images/perilDef.jpg" class="img-thumbnail" alt="imgPerfil">
        {{#if user.image}} --}}
        <img id="img-propia" src="{{user.image}}" alt="imagenPerfil" class="img-thumbnail" width="220" height="220">
        {{!-- {{/if}} --}}
      </div>
      <h2>{{user.city}}</h2>
      <h3>My interests</h3>
      {{user.interests }}
      <div class="text-success">
        <hr>
      </div>
    </div>
  </div>
  <div class="col align-self-end">
    <a href="/post/new"><button class="bttn">Make a new post</button></a>
    <a href="/home/profile/edit"><button class="bttn">Edit your profile</button></a>
    <a href="/auth/logout"><button class="bttn">Log out</button></a>
  </div>
</div>

<div class="container">
  <div class="row">
    <h2>My Pins</h2>
    {{#each user.pinPersonal}}
    <div class="col col-sm-6 col-lg-4 col-xl-3">
      <div class="card" style="width: 13.75rem; height: 40rem; margin: 3rem auto">
        <img id="pinspics" src="{{image}}" alt="{{image}}" class="img-thumbnail" width="220" height="220">
        <div class="card-body">
          <h3 class="card-title">{{namePlace}}</h3>
          <p class="card-text">Category: {{nameCategory}}</p>
          <p class="card-text">Address: {{direction}}</p>
          <p class="card-text">comments: {{comment}}</p>
          <p class="comments">Comentarios: {{usersComments.length}}</p>
        </div>
        <div id="card-body-btn" class="card-body">
          <a href="../post/{{_id}}"><button class="bttn">Open post</button></a>
          <a href="../post/{{_id}}/edit"><button class="bttn">Edit post</button></a>
          <form action="/post/{{_id}}/delete" method="post">
            <button type="submit" class="bttn bg-danger text-white">Delete post</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>