<div class="container text-center">
  <div class="row">
    <div class="col align-self-center">
      <h1>{{user.username}}'s Profile</h1>
      <div class="profile">
        {{!-- <img src="/images/perilDef.jpg" class="img-thumbnail" alt=""> --}}
        {{!-- {{#if user.image}} --}}
        <img src="{{user.image}}" alt="{{user.image}}" class="img-thumbnail" width="220" height="220">
        {{!-- {{/if}} --}}
      </div>
      <h2>{{user.city}}</h2>
      <h3>My interests</h3>
      {{user.interests }}
      <div class="text-success">
        <hr>
      </div>
    </div>
  </div>
  <div class="col align-self-end">
    <button onclick="location.href='/post/new'" type="button" class="btn btn-primary">
      Make a post</button>
    <a href="/home/profile/edit" class="btn btn-primary">Edit</a>
  </div>
</div>

<div class="container">
  <div class="row">
    <h2>My Pins</h2>
    {{#each user.pinPersonal}}
    <div class="col col-sm-6 col-md-4">
        <div class="card" style="width: 13.75rem;">
          <img src="{{image}}" alt="{{image}}" class="img-thumbnail" width="220" height="220">
          <div class="card-body">
            <h3 class="card-title">{{namePlace}}</h3>
            <p class="card-text">Category: {{nameCategory}}</p>
            <p class="card-text">Direction: {{direction}}</p>
            <p class="card-text">comments: {{comment}}</p>
            <p class="comments">Comentarios: {{usersComments.length}}</p>
          </div>
          <div class="card-body">
            <a href="../post/{{_id}}" class="link-dark">Agregar comentario</a><br>
            <a href="../post/{{_id}}/edit" class="link-info"> editar</a>
            <form action="/post/{{_id}}/delete" method="post">
              <button type="submit" class="btn btn-danger">Delete: {{namePlace}}</button>
            </form>
          </div>
        </div>
    </div>
    {{/each}}
  </div>
</div>
<h2>My Favorites</h2>
{{#each user.pinFav}}
<p>{{user.pinFav}}</p>
{{/each}}