<h2>{{namePlace}}</h2>
<div>
  {{comment}}
  <br>
  - by {{author.username}}
</div>
<div class="imagePlace">
    <img src="{{image}}" alt="{{namePlace}}">
</div>

{{#unless comments}}
  <p>No comments yet!</p>
{{/unless}}

{{#each comments}}
  <p><b>{{this.author.username}}:</b> {{this.comment}}</p>
{{/each}}

<h3>Add comment</h3>

<form action="/posts/{{_id}}/comment" method="post">
  <label> Your username:
    <input type="text" name="authorComment"/>
  </label>

  <input type="text" name="postAuthor" value="{{author.username}}" hidden />
  <textarea name="content" cols="30" rows="2"></textarea>

  <button type="submit">Comment</button>
</form>

<br>
<a href="/users/{{author._id}}/posts">See all {{author.username}}'s posts </a>